        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AlterDataWindow" 
        Height="400" Width="300">
    <Grid
            Background="#000000">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Image Grid.RowSpan="2"
            Source="/GalTalk;component/Resource/avatar.jpg" />

        <TextBlock 
                Text="s"/>
        <TextBox
                Grid.Row="3"/>
        <RadioButton/>
        <RadioButton/>
        <TextBlock/>
        <TextBox
                 Grid.Row="5"/>
    </Grid>

</Window>

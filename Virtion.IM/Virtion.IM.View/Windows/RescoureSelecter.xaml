<Window x:Class="Virtion.IM.View.Windows.RescoureSelecter"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="RescoureSelecter" 
        WindowStyle="None"
         SizeToContent="WidthAndHeight"
        Height="400"
        Width="500"
        AllowsTransparency="True"
        Background="Transparent">
    <TabControl 
            Grid.Column="1"
            VerticalAlignment="Stretch"
            HorizontalAlignment="Stretch">
        <TabItem Header="parts">
            <Grid x:Name="G_Parts" Background="#FFE5E5E5" Loaded="G_Parts_Loaded"
                  />
        </TabItem>
        <TabItem Header="background">
            <Grid x:Name="G_Background"
                    Background="#FFE5E5E5"
                 />
        </TabItem>
    </TabControl>
</Window>
